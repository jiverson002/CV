\documentclass[a4paper,12pt]{article}

\usepackage[margin=1.0in]{geometry}
\usepackage[english]{babel}

% suppress page numbering
\pagestyle{empty}

% suppress section numbers
\setcounter{secnumdepth}{0}

% modify header spacing
\usepackage{titlesec}
\titleformat{\section}{\Large\bfseries\filcenter}{}{}{}{\filcenter}
\titlespacing{\subsection}{0pt}{2\baselineskip}{\dimexpr-\parskip+\baselineskip}
\titlespacing{\subsubsection}{0pt}{\baselineskip}{-\parskip}

% prevent breaking list items across pages
\interlinepenalty10000

% override default list environment when the list is ``tight'' 
\makeatletter
\providecommand{\tightlist}{
  \setlength\labelwidth{3em}
  \setlength\leftmargin{3em}
  \advance\linewidth4em
  \advance\@totalleftmargin-4em
  \parshape \@ne \@totalleftmargin\linewidth
}
\makeatother

% change appearance of lists
\usepackage{enumitem}
\setlist{%
  nosep,
}
\setlist[itemize,1]{%
  label={},
  leftmargin=4em,
}
\setlist[itemize,2]{%
  label={},
  leftmargin=4.25em,
  before*=\footnotesize,
}
\setlist[description,1]{%
  font=\normalfont,
  labelwidth=7em,
  leftmargin=!,
  labelsep=0em,
  labelindent=0em,
  align=left,
}

% undefine a column type, courtesy of
%   https://tex.stackexchange.com/questions/144434/re-newing-a-column-type
\newcommand\undefcolumntype[1]{\expandafter\let\csname NC@find@#1\endcsname\relax}

% create a table environment which suppresses horizontal rules and fills column
% width
\usepackage{longtable}
\usepackage{tabularx}
\newcommand\forcenewcolumntype[1]{\undefcolumntype{#1}\newcolumntype{#1}}
\forcenewcolumntype{l}{>{\raggedright\arraybackslash}p{.485\textwidth}}
\forcenewcolumntype{r}{>{\raggedleft\arraybackslash}p{.485\textwidth}}
\providecommand{\toprule}{}
\providecommand{\midrule}{}
\providecommand{\bottomrule}{\\}
\providecommand{\addlinespace}{}

